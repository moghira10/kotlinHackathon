<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".OrderPage">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_marginVertical="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/mainLL"
            android:layout_height="wrap_content">
    </LinearLayout>

    <TextView
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/mainLL"
            app:layout_constraintEnd_toEndOf="@+id/mainLL"
            android:id="@+id/total"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_height="wrap_content"/>
    <TextView
            android:text="Checkout Order"
            android:textSize="15dp"
            android:background="#228B22"
            android:gravity="center_vertical"
            android:textColor="#ffffff"
            android:padding="12dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/checkout" app:layout_constraintBottom_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>
