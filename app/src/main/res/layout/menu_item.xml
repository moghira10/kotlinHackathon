<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             android:layout_margin="10dp">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:padding="@dimen/activity_horizontal_margin"
              android:layout_marginTop="20dp"
              app:layout_constraintLeft_toLeftOf="parent"
              app:layout_constraintTop_toTopOf="parent"
              android:width="220dp"
              android:id="@+id/item_name"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:padding="@dimen/activity_horizontal_margin"
              android:layout_marginTop="20dp"
              app:layout_constraintLeft_toRightOf="@id/item_name"
              app:layout_constraintTop_toTopOf="parent"
              android:width="60dp"
              android:id="@+id/item_price"
    />


    <Button android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/item_price"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/buttons"
            android:text="+"
            android:layout_marginRight="10dp"
            android:id="@+id/additem"/>
    <Button android:layout_width="40dp" android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/item_price"
            app:layout_constraintStart_toEndOf="@id/additem"
            android:background="@drawable/buttons"
            android:text="-"
            android:id="@+id/minusitem"/>

</android.support.constraint.ConstraintLayout>
